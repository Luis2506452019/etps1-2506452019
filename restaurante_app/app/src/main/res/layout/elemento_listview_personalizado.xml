<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@color/fondo_piel">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagenComida"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:contentDescription="DescripciÃ³n del contenido de la imagen"
            android:src="@android:drawable/ic_menu_gallery" />
        <!-- android:scaleType="fitXY" -->
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtNombreComida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre Comida"
            android:gravity="start"
            android:textColor="@color/cafe"
            android:textStyle="bold"
            android:textSize="18dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtPre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRECIO"
            android:gravity="start"
            android:textColor="@color/anaranjado"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txtPrecioComida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="$17.00"
            android:gravity="start"
            android:textColor="@color/verde"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnPedirComida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pide Ya"
            android:drawableLeft="@drawable/icon_carrito"
            android:drawableTint="@color/piel"
            android:textColor="@color/piel"
            android:textStyle="bold"
            android:backgroundTint="@color/verde"/>
    </TableRow>
</LinearLayout>