<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".other.HorarioFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/txtTituloHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tituloHorario"
            android:textSize="24dp"/>
        <TextView
            android:id="@+id/txtSubTituloHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/subtituloHorario"
            android:textSize="15sp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@color/backgroundTable_grey"
            android:gravity="center"
            android:stretchColumns="*"
            android:shrinkColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <TextView
                    android:text="@string/headTitle0"
                    android:gravity="left"
                    android:padding="10dip"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dis_borde_headorange_table"/>
                <ImageView
                    android:id="@+id/imagenHorarioMapa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitEnd"
                    android:src="@drawable/mapa_horario"
                    app:tint="@color/iconTable_red" />
            </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:text="@string/headTitle1"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:background="@drawable/dis_borde_headgrey_table"/>
                    <TextView
                        android:text="@string/headTitle2"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dis_borde_headgrey_table"/>
                    <TextView
                        android:text="@string/headTitle3"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dis_borde_headgrey_table"/>
                    <TextView
                        android:text="@string/headTitle4"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dis_borde_headgrey_table"/>
                    <TextView
                        android:text="@string/headTitle5"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dis_borde_headgrey_table"/>
                    <TextView
                        android:text="@string/headTitle6"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dis_borde_headgrey_table"/>
                    <TextView
                        android:text="@string/headTitle7"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dis_borde_headgrey_table"/>
                    <TextView
                        android:text="@string/headTitle8"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dis_borde_headgrey_table"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:text="@string/bodyRow1"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dis_borde_bodyone_table" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/dis_borde_bodyone_table"
                        android:src="@drawable/icon_check" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/dis_borde_bodyone_table"
                        android:src="@drawable/icon_check" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/dis_borde_bodyone_table"
                        android:src="@drawable/icon_check" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/dis_borde_bodyone_table"
                        android:src="@drawable/icon_check" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/dis_borde_bodyone_table"
                        android:src="@drawable/icon_check" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/dis_borde_bodyone_table"
                        android:src="@drawable/icon_check" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/dis_borde_bodyone_table"
                        android:src="@drawable/icon_check" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:text="@string/bodyRow1"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dis_borde_bodytwo_table"/>
                    <ImageView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/dis_borde_bodytwo_table"
                        android:src="@drawable/icon_check" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/dis_borde_bodytwo_table"
                        android:src="@drawable/icon_check" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/dis_borde_bodytwo_table"
                        android:src="@drawable/icon_check" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/dis_borde_bodytwo_table"
                        android:src="@drawable/icon_check" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/dis_borde_bodytwo_table"
                        android:src="@drawable/icon_check" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/dis_borde_bodytwo_table"
                        android:src="@drawable/icon_check" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/dis_borde_bodytwo_table"
                        android:src="@drawable/icon_check" />
                </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/backgroundTable_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/imagenHorarioTelefono"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/telefono_horario"
                    app:tint="@color/iconTable_red" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/telefonoHorario"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textSize="14sp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imagenHorarioRegalo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/dis_borde_redondogift_table"
                        android:src="@drawable/regalo_horario"
                        app:tint="@color/black" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/imagenHorarioCarro"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/carro_horario"
                    app:tint="@color/iconTable_red" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="14sp"
                    android:text="@string/regularHorario" />

                <ImageView
                    android:id="@+id/imagenHorarioCheck1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_check" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="14sp"
                    android:text="@string/especialHorario" />

                <ImageView
                    android:id="@+id/imagenHorarioCheck2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_check" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="14sp"
                    android:text="@string/dieselHorario" />

                <ImageView
                    android:id="@+id/imagenHorarioCheck3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_check" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerHorarioAbajo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="30dp"
                android:minWidth="50dp"
                android:minHeight="50dp"
                android:contentDescription="Cuadro de opciones"
                android:backgroundTint="@color/iconArrow_yellow" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>