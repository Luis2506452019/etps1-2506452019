<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clases.RegistrarseFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_tra"
                android:background="@color/yellow"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="24dp">
                <EditText
                    android:id="@+id/userRegistrar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/dis_borde_edittext_form"
                    android:drawableLeft="@drawable/icon_nombre"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/white"
                    android:hint="@string/txtHintNombre"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
                <EditText
                    android:id="@+id/mailRegistrar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/dis_borde_edittext_form"
                    android:drawableLeft="@drawable/icon_mail"
                    android:inputType="textEmailAddress"
                    android:drawableTint="@color/white"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:hint="@string/txtHintMail" />
                <EditText
                    android:id="@+id/passRegistrar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/dis_borde_edittext_form"
                    android:drawableLeft="@drawable/icon_password"
                    android:inputType="textPassword"
                    android:drawableTint="@color/white"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:hint="@string/txtHintPass" />
                <EditText
                    android:id="@+id/passConfRegistrar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/dis_borde_edittext_form"
                    android:drawableLeft="@drawable/icon_password"
                    android:inputType="textPassword"
                    android:drawableTint="@color/white"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:hint="@string/txtHintConfPass" />
                <Button
                    android:id="@+id/btnRegistrarCuenta"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/yellow"
                    app:cornerRadius = "20dp"
                    android:text="@string/btnReg"
                    android:textSize="18sp" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txtTenerCuenta"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/txtLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:text="@string/txtIniciar"
                        android:textColor="@color/yellow"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </TableRow>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>