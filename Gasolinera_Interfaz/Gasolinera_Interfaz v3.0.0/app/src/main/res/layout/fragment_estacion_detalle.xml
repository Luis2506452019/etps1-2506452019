<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clases.EstacionDetalleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@color/headTable_grey">

        <TextView
            android:id="@+id/tituloGasolineraEstacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nombre Gasolinera"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="18dp"/>

        <ImageView
            android:id="@+id/imagenListEstacion"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:contentDescription="DescripciÃ³n del contenido de la imagen"
            android:src="@android:drawable/ic_menu_gallery" />

    </LinearLayout>

</FrameLayout>